{
  "name": "fpl-ccd-configuration",
  "version": "1.0.0",
  "description": "FPL CCD e2e tests",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "codeceptjs": "^1.4.6",
    "eslint": "5.9.0 ",
    "eslint-plugin-codeceptjs": "^0.4.0",
    "husky": "^1.2.0",
    "webdriverio": "^4.13.1",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi": "^1.0.1",
    "puppeteer": "^1.11.0"

  },
  "scripts": {
    "lint": "eslint e2e",
    "typings": "codeceptjs def && mv steps.d.ts typings/codeceptjs.d.ts",
    "test": "codeceptjs run-multiple parallel",
    "test-crossbrowser": "NODE_ENV=testing LOG_LEVEL=OFF NODE_PATH=. node_modules/.bin/codeceptjs run-multiple  ${BROWSER_GROUP:-'--all'} -c ./saucelabs.conf.js --steps --reporter mocha-multi",
    "test-crossbrowser-e2e": "NODE_ENV=testing LOG_LEVEL=OFF NODE_PATH=. node_modules/.bin/codeceptjs run-multiple  ${BROWSER_GROUP:-'--all'} -c ./saucelabs.conf.js --steps",
    "test:functional": "codeceptjs run-multiple parallel --invert --grep @smoke-tests",
    "test:smoke": "codeceptjs run --reporter mocha-multi --grep @smoke-tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "license": "MIT"
}

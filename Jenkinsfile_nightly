#!groovy

properties([
  pipelineTriggers([cron('20 21 * * *')])
])

@Library('Infrastructure')

def type = 'java'

def product = 'fpl'
def component = 'case-service'

withNightlyPipeline(type, product, component) {
  enableMutationTest()
  enableFullFunctionalTest()
  enableCrossBrowserTest()

  after('mutationTest') {
    withSonarQubeEnv('SonarQube') {
      sh './gradlew --info sonarqube'
    }
  }

  before('fullFunctionalTest') {
    env.URL = 'http://ccd-case-management-web-aat.service.core-compute-aat.internal'
    env.PROXY_SERVER = 'proxyout.reform.hmcts.net:8080'

    try {
      sh('./gradlew --no-daemon --info --rerun-tasks functional')
    } finally {
      archiveArtifacts allowEmptyArchive: true, artifacts: 'output/**/*'
    }
  }


  before('crossBrowserTest') {
    console.log("SAUCE USERNAME is : " + process.env.SAUCE_USERNAME)
    console.log("SAUCE ACCESS KEY is :" + process.env.SAUCE_ACCESS_KEY)
    env.URL = 'http://ccd-case-management-web-aat.service.core-compute-aat.internal'
    env.PROXY_SERVER = 'proxyout.reform.hmcts.net:8080'
    try {
      sh('./gradlew --no-daemon --info --rerun-tasks crossBroswer')
    } finally {
      archiveArtifacts allowEmptyArchive: true, artifacts: 'output/**/*'
    }
  }
}
